{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["/*"]
    },
    "outDir": "./lib",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "commonJs",
    "allowJs": true,
    "checkJs": true,
    "removeComments": false,
    "newLine": "lf"
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "lib"]
}
